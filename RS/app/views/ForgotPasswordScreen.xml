<Alloy>
	<Window class="container" name="ForgotPassword" onClick="winClickFun">
		<ImageView image="/images/background.png" left="0" right="0" top="0" bottom="0"></ImageView>
		<ScrollView top="0" bottom="0">
			<Button id="backBtn" image="/images/arrowwhite.png"  height="40dp" backgroundImage="none" width="50dp"  left="0" onClick="closeForgotPasswordFun"></Button>
			<ImageView image="/images/logo.png" top="30"></ImageView>
			<!-- <Button top="20" right="5" onClick="cancelFun" width="40dp" height="40dp" image="/images/cancel.png" backgroundImage="none"></Button> -->
			<View height="Ti.UI.SIZE" layout="vertical">
				<Label id="emailTxt" zIndex="1"></Label>
				<TextField id="emailTF" name="tf" onReturn="verifyEmailViaKepad" zIndex="10"></TextField>
				<Button id="verifyBtn" onClick="verifyEmail" top="30">Submit</Button>

			</View>
		</ScrollView>
	</Window>
</Alloy>