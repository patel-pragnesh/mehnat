<Alloy>
	<NavigationWindow  id="openRegister" name="openRegister" >
		<Window  class="container" titleid="open_register_txt" backgroundColor="#EDECF2" onClick="winFun">
			<LeftNavButtons  platform="ios">
				<Button  id="menuBtn"  backgroundColor="none" image="/images/menu.png" onClick="toggleLeftView"></Button>
			</LeftNavButtons>
			<ScrollView disableBounce="true" >
				<View width="54%" height="78%" borderRadius="5" backgroundColor="white" viewShadowColor="#acacac" layout="vertical">
					<View top="2%" right="10%" layout="horizontal" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
						<ImageView image="/images/calender.png"></ImageView>
						<Label id="dateLbl" left="10"></Label>
					</View>
					<Label id="balancLbl" textid="balance_txt" top="5%" width="80%" textAlign="left"></Label>
					<TextField id="balancTF" name="tf" keyboardType ="Titanium.UI.KEYBOARD_TYPE_PHONE_PAD" class="tf" top="10" width="80%"  backgroundColor="white" borderColor="#E7E7E7" borderWidth="1" borderRadius="6" height="12%" hinttextid="enetr_amount_txt" hintTextColor="#CFCFCF" onClick="openPinFunc"></TextField>
					<View top="25" width="80%"  borderColor="#E7E7E7" borderWidth="1" borderRadius="6"  height="48%">
						<TextArea id="noteTF" class="tf" name="tf" width="Ti.UI.Fill" left="15" right="15" top="15" height="Ti.UI.FILL" backgroundColor="white" onChange="textAreaChangeFun"></TextArea>
						<Label id="hintLbl" left="18" top="20" color="#CFCFCF" textid="open_register_txtarea_hint_lbl"></Label>
					</View>
					<Button id="openRegisterBtn" height="8%" backgroundColor="#c32032" backgroundImage="none" titleid="open_register_txt" top="25" width="80%" borderRadius="6" onClick="validateOpenRegisterFun"></Button>
				</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>