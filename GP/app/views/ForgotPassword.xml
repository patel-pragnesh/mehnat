<Alloy>
	<Window class="container" id="forgotPasswordWin" title="Forgot Password" onClick="winClickFunc">
		<ScrollView>
			<ImageView image="/images/goncha-logo.png" top="10%"></ImageView>
			<View id="centerVW" height="Ti.UI.SIZE" layout="vertical">

				<Label id="textLbl" text="L('forgot_Message')" top="0" textAlign="left" width="45%"></Label>
				<View id="emailVW" borderColor="#382E2C" width="45%" height="56" borderRadius="6" top="20" layout="horizontal">
					<ImageView image="/images/mail.png" left="15"></ImageView>
					<TextField id="emailTF" class="textField" name="tf"></TextField>
				</View>
				<Button id="submitBtn" titleid="L('submit_text')"  width="45%" height="54"  borderRadius="6" color="#ffffff" backgroundImage="none" backgroundColor="#382E2C" top="40" onClick="submitFunc"></Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>