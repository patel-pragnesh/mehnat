<Alloy>
	<Window class="container" id="pinPad"   backgroundImage="/images/blacktrans.png" backgroundColor="transparent" bubbleParent="false" accessibilityHidden="true" layout="horizontal">
		<View  width="Ti.UI.FILL" height="Ti.UI.FILL"   >
			<View  width="45%" height="80%"  backgroundColor="#382E2C"  borderRadius="5" layout="vertical">
				<Button id="canclebtn" top="1%" title="Cancel" onClick="cancleScreenFun" ></Button>
			<View left="8%" right="8%" top="1.5%" layout="vertical">
					<!-- <TextField id="pinNoTF"  height="12.5%" editable="false"  backgroundColor="white" paddingLeft="14" borderRadius="10" width="Ti.UI.FILL" hintText="Enter amount" hintTextColor="#949292"></TextField> -->
					<View  height="11%" borderColor="#E7E7E7"  backgroundColor="white"  borderRadius="6" width="Ti.UI.FILL">
						<TextField id="pinNoTF" height="Ti.UI.FILL" editable="false" left="0" right="30"  hintTextColor="#949292" ></TextField>
						<Button right="0" height="Ti.UI.FILL"  backgroundImage="none" image="/images/popup_cross.png" width="30" onClick="cleardailpadfun"></Button>
					</View>
						<View  top="2.5%" height="18%" width="Ti.UI.FILL" layout="horizontal">
							<Button height="Ti.UI.FILL" class="btn" width="30%" backgroundColor="white" borderRadius="10" color="black" name="7" onSingletap="dialpadbtnfun">7</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%" width="30%" backgroundColor="white" borderRadius="10" color="black" name="8" onSingletap="dialpadbtnfun">8</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%"  width="30%" backgroundColor="white" borderRadius="10" color="black" name="9" onSingletap="dialpadbtnfun">9</Button>
						</View>  
						<View top="3%" height="18%" width="Ti.UI.FILL" layout="horizontal">
							<Button height="Ti.UI.FILL" class="btn"  width="30%" backgroundColor="white" borderRadius="10" color="black" name="4" onSingletap="dialpadbtnfun">4</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%" width="30%" backgroundColor="white" borderRadius="10" color="black" name="5" onSingletap="dialpadbtnfun">5</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%"  width="30%" backgroundColor="white" borderRadius="10" color="black" name="6" onSingletap="dialpadbtnfun">6</Button>
						</View>
						<View  top="3%" height="18%" width="Ti.UI.FILL" layout="horizontal">
							<Button height="Ti.UI.FILL" class="btn" width="30%" backgroundColor="white" borderRadius="10" color="black" name="1" onSingletap="dialpadbtnfun">1</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%" width="30%" backgroundColor="white" borderRadius="10" color="black" name="2" onSingletap="dialpadbtnfun">2</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%"  width="30%" backgroundColor="white" borderRadius="10" color="black" name="3" onSingletap="dialpadbtnfun">3</Button>
						</View>
						<View top="3%" height="18%" width="Ti.UI.FILL" layout="horizontal">
							<Button height="Ti.UI.FILL" class="btn"  width="30%" backgroundColor="white" borderRadius="10" color="black" name="0"  borderColor="#E7E7E7" onSingletap="dialpadbtnfun">0</Button>
							<Button height="Ti.UI.FILL" class="btn" left="4.55%" width="30%" backgroundColor="white" borderRadius="10" color="black" name="."  borderColor="#E7E7E7" onSingletap="dialpadbtnfun">.</Button>
							<!-- <View height="Ti.UI.FILL" left="4.55%" width="30%" backgroundColor="#BD1B38" borderRadius="10" color="#fff" onClick="cleardailpadfun">
								<View height="Ti.UI.SIZE" layout="vertical">
									<ImageView image="/images/clear_icon.png"></ImageView>
									<Label class="btn" color="white" textid="clear_txt"></Label>
								</View>
							</View> -->
							<View height="Ti.UI.FILL" class="btn" left="4.55%"  width="30%" backgroundColor="#6FB49A" borderRadius="10" onClick="validateLoginfun">
								<View height="Ti.UI.SIZE" layout="vertical">
									<ImageView image="/images/enter.png"></ImageView>
									<Label class="btn" color="white" textid="continue_txt"></Label>
								</View>
							</View>
							
						</View>
					</View>  
				</View>
			</View>
	</Window>
</Alloy>